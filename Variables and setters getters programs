//LOCAL VARIABLE
class Eg{
public Static void main(String args[]){
int a=10;//local
System.out.println(a);
}
}

//INSTANCE VARIABLE
class Eg{
int a=12;
public Static void main(String[] args){
System.out.println(a);
}}

//WITHOUT ERROR
class Eg{
int a=12;
public Static void main(String[] args){
Eg de=new Eg();
System.out.println(de.a);
}}

